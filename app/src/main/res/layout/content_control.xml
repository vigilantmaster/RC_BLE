<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ControlActivity"
    tools:showIn="@layout/activity_control">

    <TextView
        android:id="@+id/txtBLEid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="ble ADDRESS"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="201dp" />

    <Button
        android:id="@+id/btnSendL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send L"
        app:layout_constraintEnd_toStartOf="@+id/btnSendB"
        tools:layout_editor_absoluteY="80dp" />

    <Button
        android:id="@+id/btnSendR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send R"
        app:layout_constraintStart_toEndOf="@+id/btnSendB"
        tools:layout_editor_absoluteY="80dp" />

    <Button
        android:id="@+id/btnSendF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Send F"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="170dp" />

    <Button
        android:id="@+id/btnSendB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send B"
        app:layout_constraintTop_toBottomOf="@+id/btnSendF"
        tools:layout_editor_absoluteX="170dp" />

</androidx.constraintlayout.widget.ConstraintLayout>